<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
                 version="1.0">
  <entity class="net.sf.jpasecurity.model.MethodAccessXmlTestBean" access="PROPERTY">
    <attributes>
      <id name="id"/>
      <basic name="name"/>
      <many-to-one name="parent"/>
      <one-to-many name="children"/>
    </attributes>
  </entity>
  <entity class="net.sf.jpasecurity.model.FieldAccessXmlTestBean" access="FIELD">
    <attributes>
      <id name="id"/>
      <basic name="name"/>
      <many-to-one name="parent"/>
      <one-to-many name="children"/>
    </attributes>
  </entity>
</entity-mappings>