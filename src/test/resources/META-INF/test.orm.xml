<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
                 version="2.0">
  <persistence-unit-metadata>
    <persistence-unit-defaults>
      <entity-listeners>
        <entity-listener class="org.jpasecurity.model.DefaultEntityListener" />
      </entity-listeners>
    </persistence-unit-defaults>
  </persistence-unit-metadata>
  <package>org.jpasecurity.model</package>
  <entity class="MethodAccessTestBean" access="PROPERTY">
    <attributes>
      <id name="id"/>
      <basic name="name"/>
      <many-to-one name="parent" fetch="LAZY"/>
      <one-to-many name="children" fetch="EAGER" target-entity="MethodAccessTestBean">
        <cascade>
          <cascade-persist/>
          <cascade-merge/>
          <cascade-remove/>
          <cascade-refresh/>
        </cascade>
      </one-to-many>
      <one-to-many name="related">
        <map-key name="parent"/>
      </one-to-many>
    </attributes>
  </entity>
  <entity class="org.jpasecurity.model.FieldAccessXmlTestBean" access="FIELD">
    <entity-listeners>
      <entity-listener class="org.jpasecurity.model.TestEntityListener">
        <post-persist method-name="publicTestMethod"/>
        <post-remove method-name="protectedTestMethod"/>
        <post-update method-name="packageProtectedTestMethod"/>
        <post-load method-name="privateTestMethod"/>
      </entity-listener>
    </entity-listeners>
    <attributes>
      <id name="id"/>
      <basic name="name"/>
      <many-to-one name="parent" fetch="LAZY" target-entity="FieldAccessXmlTestBean"/>
      <one-to-many name="children" fetch="EAGER">
        <cascade>
          <cascade-all/>
        </cascade>
      </one-to-many>
    </attributes>
  </entity>

</entity-mappings>