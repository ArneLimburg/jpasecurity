                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <version>3.7.0</version>
                        <configuration>
                            <testExcludes>
                                <testExclude>org/jpasecurity/contacts/ejb/EjbContactsTest.java</testExclude>
                            </testExcludes>
