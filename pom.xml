                                    </fileset>
                                </delete>
                                <replace dir="target/generated-sources/jjtree/org/jpasecurity/jpql/parser/" token="public Object jjtAccept(JpqlParserVisitor visitor, Object data)" value="public &lt;T&gt; boolean jjtAccept(JpqlParserVisitor&lt;T&gt; visitor, T data)" />
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
