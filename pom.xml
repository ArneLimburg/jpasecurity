            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <id>cycle-check</id>
                        <phase>package</phase>
                        <configuration>
                            <target description="Checking for cyclic package-dependencies">
                                <xslt in="target/jdepend-report.xml"
                                      out="target/jdepend-cycle-check.txt"
                                      style="${project.basedir}/src/main/jdepend/xsl/jdepend-cycle-check.xsl"/>

                                <!-- Fail on cycles -->
                                <fail message="There are cycles in the package-dependencies">
                                    <condition>
                                        <length file="target/jdepend-cycle-check.txt" when="greater" length="0"/>
                                    </condition>
                                </fail>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>process-generated-sources</id>
                        <phase>process-sources</phase>
                        <configuration>
                            <target>
                                <delete>
                                    <fileset dir="target/generated-sources/javacc/org/jpasecurity/jpql/parser/">
                                        <present targetdir="src/main/java/org/jpasecurity/jpql/parser"/>
                                    </fileset>
                                </delete>
                                <replace dir="target/generated-sources/jjtree/org/jpasecurity/jpql/parser/"
                                         token="public Object jjtAccept(JpqlParserVisitor visitor, Object data)"
                                         value="public &lt;T&gt; boolean jjtAccept(JpqlParserVisitor&lt;T&gt; visitor, T data)"/>
                                <delete file="target/generated-sources/jjtree/org/jpasecurity/jpql/parser/JpqlParserDefaultVisitor.java"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
