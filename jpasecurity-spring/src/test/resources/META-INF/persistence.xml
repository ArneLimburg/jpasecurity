<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

  <persistence-unit name="spring-contacts" transaction-type="RESOURCE_LOCAL">

    <provider>org.hibernate.ejb.HibernatePersistence</provider>

    <class>org.jpasecurity.contacts.model.User</class>
    <class>org.jpasecurity.contacts.model.Contact</class>
	<class>org.jpasecurity.spring.acl.Sid</class>
	<class>org.jpasecurity.spring.acl.Principal</class>
	<class>org.jpasecurity.spring.acl.Role</class>
	<class>org.jpasecurity.spring.acl.AccessControlList</class>
	<class>org.jpasecurity.spring.acl.AccessControlEntry</class>
	<class>org.jpasecurity.spring.acl.AccessControlledEntityType</class>
	<class>org.jpasecurity.spring.acl.AccessControlledEntityReference</class>

    <exclude-unlisted-classes>true</exclude-unlisted-classes>

    <properties>
      <property name="hibernate.hbm2ddl.auto" value="create-drop" />
    </properties>

  </persistence-unit>

</persistence>